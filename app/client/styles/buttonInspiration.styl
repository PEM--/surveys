@import 'nib'
@import '/client/styles/*.import'

button.inspiration
  float left
  min-width 150px
  max-width @min-width + 200
  display block
  margin 1em
  padding 1em 2em
  border none
  background none
  color inherit
  vertical-align middle
  position relative
  z-index 1
  -webkit-backface-visibility hidden
  color brandColor
  border-radius roundCorner
  border 1px solid brandColor
  box-shadow 0 0 0 brandColor
  transition box-shadow defaulTransitionValue
  &:focus
    outline none
    box-shadow 0 1px 3px brandColor
    transition box-shadow defaulTransitionValue
  >span
    vertical-align middle
  &:active
    top 2px

@import '/client/styles/button-inspiration/tamaya.import'
