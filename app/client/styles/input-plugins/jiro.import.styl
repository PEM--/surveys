@import 'nib'
@import '/client/styles/*.import'

form
  >span
    margin-top 2em
    >input
      padding .85em .5em
      width 100%
      background transparent
      opacity 0
      transition opacity defaultTransitionValue
      color bgColor
    >label
      absolute left
      padding 0 .85em
      size 100%
      text-align left
      pointer-events none
      >span
        transition transform .3s defaultTransitionValue
      &::before, &::after
        content ''
        absolute top left
        size 100%
        transition transform defaultTransitionValue
      &::before
        border-top 2px solid brandColor
        transform translate3d(0, 100%, 0) translate3d(0, -2px, 0)
        transition-delay .3s
      &::after
        z-index -1
        border-radius roundCorner
        background brandColor
        transform scale3d(1, 0, 1)
        transform-origin 50% 0%
    >input:focus, >input.filled
      opacity 1
      transition-delay .3s
      +label
        >span
          transform translate3d(0, -80%, 0)
        &::before, &::after
          transition-delay 0s
        &::before
          width calc(100% - 3px)
          transform translate3d(0, 0, 0)
        &::after
          transform scale3d(1, 1, 1)
          transition-delay .3s
