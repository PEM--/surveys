@import 'jeet'
@import '/client/styles/*.import'

roundCorner = 3px
borderStyle = 1px solid brandColor

table
  delayedAnimation()
  table(false, false, false)
  th, td
    border-top: borderStyle

  tbody + tbody
    border-top: borderStyle

  th + th, td + td, th + td, td + th
    border-left: borderStyle

  thead:first-child tr:first-child th:first-child
  tbody:first-child tr:first-child td:first-child
    border-radius roundCorner 0 0 0

  thead:first-child tr:first-child th:last-child
  tbody:first-child tr:first-child td:last-child
    border-radius 0 roundCorner 0 0

  thead:last-child tr:last-child th:first-child
  tbody:last-child tr:last-child td:first-child
    border-radius 0 0 0 roundCorner

  thead:last-child tr:last-child th:last-child
  tbody:last-child tr:last-child td:last-child
    border-radius 0 0 roundCorner 0

  tbody tr:nth-child(odd) td
  tbody tr:nth-child(odd) th
    transition background-color defaultTransitionValue
    background-color lighten(brandColor, 55%)

  tbody tr:nth-child(even) td
  tbody tr:nth-child(even) th
    background-color lighten(brandColor, 65%)

  tbody tr:hover td
  tbody tr:hover th
    transition background-color defaultTransitionValue
    background-color lighten(brandColor, 45%)

  thead:first-child
    background-color brandColor
    color bgColor

  button
    padding .6em
    width 40px
    margin-right 1em
    &:before, &:hover:before
      text-align center
      width @width - 2px
      line-height 1.2em
      font-size 1em
      color bgColor
      background-color brandColor
      border-radius roundCorner
    &:hover:before
      background-color darken(brandColor, 30%)

  button[data-role='view']
    &:before
      content '\f200'
  button[data-role='modify']
    &:before
      content '\f044'
  button[data-role='copy']
    &:before
      content '\f0c5'
  button[data-role='remove']
    border 1px solid brandDanger
    &:before
      background-color brandDanger
      content '\f014'
    &:hover
      border 1px solid darken(brandDanger, 30%)
      &:before
        background-color darken(brandDanger, 30%)
