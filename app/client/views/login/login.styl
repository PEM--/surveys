@import 'nib'
@import '/client/styles/*.import'

article[data-role='login']
  size 100%
  display flex
  flex-direction row
  flex-wrap nowrap
  justify-content center
  align-content center
  align-items center
  main
    animation-name fadeInDown
    longAnimation()
    margin 2em
    padding 2em
    border-radius roundCorner
    border 1px solid brandColor
    box-shadow 0 0 5px lighten(brandColor, 50%) inset
    size 100% auto
    max-width 450px
    h1
      text-align center
      margin 0
    form
      display flex
      flex-direction row
      flex-wrap wrap
      justify-content flex-end
      align-items flex-end
      align-content flex-end
      >span:first-of-type
        size 100% 3em
      >span:last-of-type
        size 70% 3em
        flex-grow 1
        margin-right 1em
      >button
        margin 0
