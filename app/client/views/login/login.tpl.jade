article(data-role='login')
  main
    h1 Surveys
    form
      span.input
        input(type='email', id='username', name='username', autocapitalize='off', autofocus, minlength='5', maxlength='200')
        label(for='username'): span Votre identifiant
      span.input
        input(type='password', id='password', name='password', placeholder='', autocapitalize='off', minlength='6', maxlength='20')
        label(for='password'): span Votre mot de passe
      button#validate.small(type='submit')
        i.fa.fa-chevron-circle-right.fa-2x
        span J'accède aux données
