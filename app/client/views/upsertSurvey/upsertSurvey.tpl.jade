article(data-role='upsert-survey')
  if this.name
    h1 Modifier : #{this.name}
    +quickForm collection='Surveys' doc=this id='updateSurvey' type='update' buttonContent='Modifier' buttonClasses='modify'
  else
    h1 Ajouter un nouveau questionnaire
    +quickForm collection='Surveys' id='insertSurvey' type='insert' buttonContent='Ajouter' buttonClasses='add'
