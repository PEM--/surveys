@import '/client/styles/*.import'

article[data-role='admin']
  button[data-role='create']
    &:before
      content '\f055'
  main
    padding-top 10px
    ul
      width 100%
      display flex
      flex-direction row
      flex-wrap wrap
      justify-content flex-start
      align-content center
      align-items flex-start
      inline-list()
      li
        background-color lighten(brandColor, 30%)
        size 300px 55px
        padding 10px
        border 1px solid brandColor
        border-bottom 3px solid brandColor
        border-radius roundCorner
        color bgColor
        &.admin
          background-color lighten(brandDanger, 30%)
          border 1px solid brandDanger
          border-bottom 3px solid brandDanger
        p
          margin 0
          padding 0
        p::before
          margin-right 10px
          display inline-block
          line-height 30px
          size @line-height
          border-radius @line-height
          font-size .75 * @line-height
          text-align center
          background-color bgColor
          color brandDanger
          font-family FontAwesome
          content ''
        p.doc::before
          content ''
