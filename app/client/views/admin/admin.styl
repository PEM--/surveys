@import '/client/styles/*.import'

article[data-role='admin']
  main
    padding-top 10px
    ul
      width 100%
      display flex
      flex-direction row
      flex-wrap wrap
      justify-content flex-start
      align-content center
      align-items flex-start
      inline-list()
      li
        cursor pointer
        user-select none
        background-color lighten(brandColor, 30%)
        size 300px 55px
        padding 10px
        border 1px solid brandColor
        border-bottom 3px solid brandColor
        border-radius roundCorner
        color bgColor
        p
          pointer-events none
          width @width - 2 * @padding
          margin 0
          padding 0
          overflow ellipsis
          &::before
            pointer-events none
            margin-right 10px
            display inline-block
            line-height 30px
            size @line-height
            border-radius @line-height
            font-size .75 * @line-height
            text-align center
            background-color bgColor
            color brandColor
            font-family FontAwesome
            content ''
          &.doc::before
            content ''
        &.admin
          border-color brandDanger
          background-color lighten(@border-color, 30%)
          p::before
            color @border-color
